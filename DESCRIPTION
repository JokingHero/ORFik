Package: ORFik
Type: Package
Title: Open Reading Frames
Version: 0.99.0
Authors@R: c(
  person(given = "Kornel", family = "Labun", email = "kornellabun@gmail.com", role = c("aut", "cre", "cph")),
  person(given = "Haakon", family = "Tjeldnes", email = "hauken_heyken@hotmail.com", role = c("aut", "dtc")),
